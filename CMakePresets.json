{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 10,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "io-test",
            "displayName": "io-test config",
            "description": "Default build using Ninja generator",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "APP_NAME": "${presetName}",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "C++",
                "CMAKE_TOOLCHAIN_FILE": null
            }
        }
    ]
}